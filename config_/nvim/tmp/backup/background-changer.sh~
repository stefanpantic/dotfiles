#!/bin/bash
partal_path=$HOME/Background
backgrounds=$(ls $partal_path) 
arr=()
i=0
n=0

for pic in $backgrounds;
do
	arr[$i]=$pic
	i=$(expr $i '+' 1)
done

n=$i
i=$(expr $RANDOM '%' $n)

while true ;
do
	feh --bg-scale $partal_path/${arr[$i]}	
	i=$(expr $i '+' 1)
	if [ $i -ge $n ];
	then
		i=0
	fi
	sleep 10m
done

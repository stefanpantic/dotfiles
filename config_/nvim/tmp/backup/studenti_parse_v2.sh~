#!/bin/sh
grep -Eoh '<td>\s*[A-Za-z ]+\s*<\/td><td>\s*[0-9]{1,3}\/[0-9]{4}\s*<\/td>' nastava*.html |
sed -E 's/<td>\s*([A-Za-z ]+)\s*<\/td><td>\s*([0-9]{1,3}\/[0-9]{4})\s*<\/td>/\1 \2/' |
sed -E 's/ ([0-9]{1})\// 00\1\//' |
sed -E 's/ ([0-9]{2})\// 0\1\//' |
sed -E 's/([0-9]{3})\/[0-9]{2}([0-9]{2})/mi\2\1/' |
sed -E 's/(.*?)([A-Z]{1}[a-z]+) (mi[0-9]{5})$/\2 \1\3/' |
grep -n '.' |
sed -E 's/^([0-9]+):(.*?)/\1. \2/'

import math

BG_COLOR = '\x1b[0m   '
PIXEL_MATRIX = [[BG_COLOR for y in range(8)] for x in range(8)]

def line_brute_force(x0, y0, x1, y1):
    y0 = len(PIXEL_MATRIX) - y0
    dx = x1 - x0
    dy = y1 - y0
    m = dy/dx
    for x in range(x0, x1):
        y = m*(x - x0) + y0
        PIXEL_MATRIX[math.floor(y + 0.5)][x] = '\x1b[1m\x1b[102m   '

line_brute_force(1, 2, 7, 4)

for row in PIXEL_MATRIX:
    for entry in row:
        print(entry, end='')
    print('\n')


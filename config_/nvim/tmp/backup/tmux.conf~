#=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
#change prefix key from C-b to C-a
#=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
unbind C-b
set-option -g prefix C-a
bind-key C-a send-prefix
#=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=

#=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
#change split h from " to h and split v from % to v
#=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
unbind '"'
unbind %
bind h split-window -h
bind v split-window -v
#=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=

#bind r to reload confing file
bind r source-file ~/.tmux.conf
#bind move left H
bind H select-pane -L
#bind move right J
bind L select-pane -R 
#bind move up K
bind K select-pane -U
#bind move down J
bind J select-pane -D 
#turn on a scroling on a mouse
set -g mouse on
#set fish as a default shell for tmux
set-option -g default-shell /usr/bin/fish
#=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
#setting up tmux powerline
#=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
set-option -g status on
set-option -g status-interval 2
set-option -g status-justify centre
set-option -g status-left-length 70 
set-option -g status-right-length 90
set-option -g status-left "#(~/bin/tmux-powerline/powerline.sh left)"
set-option -g status-right "#(~/bin/tmux-powerline/powerline.sh right)"
set-option -g status-style "fg=#abb2bf,bg=#262626" 
#=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=

#turn on vim key binding
set-option -g mode-keys vi

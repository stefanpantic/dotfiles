#pragma once

#include "GL/gl.h"

namespace rg::opt
{

	/*
	* @brief Enum containing viewpoint movemement options
	*/
	enum class RGView
	{
		/* Direction options */
		UP,
		DOWN,
		LEFT,
		RIGHT,

		/* Stop movement */
		STOP_VERTICAL,
		STOP_HORIZONTAL,
	}; /* enum class RGView */

	/*
	* @brief Enum containing eye point movement options
	*/
	enum class RGPosition
	{
		/* Direction options */
		UP,
		DOWN,
		LEFT,
		RIGHT,

		/* Stop movement */
		STOP_FORWARD,
		STOP_SIDEWAYS,
	}; /* enum class RGPosition */

	/*
	* @brief Enum containing transformation options
	*/
	enum class RGTransform
	{
		/* Transformation options */
		MODELVIEW,
		PROJECTION,
		TEXTURE,
	}; /* enum class RGTransform */

	/*
	* @brief Enum containing button options
	*/
	enum class RGButton
	{
		/* Button options */
		UP,
		DOWN,
		LEFT,
		RIGHT,
		JUMP,
		ABILITY,
		EXIT,
	}; /* enum class RGTransform */

} /* namespace rg */

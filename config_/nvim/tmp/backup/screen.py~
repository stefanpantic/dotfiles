#!/bin/python

# define a Screen class
class Screen:

    def __init__(self, width = 10, height = 10):
        self.PIXEL_MATRIX = [['\x1b[0m   ' for x in range(width)] for y in range(height)]

    def set_pixel(self, x, y):
        self.PIXEL_MATRIX[y][x] = '\x1b[104m   '

    def print_screen(self):
        self.PIXEL_MATRIX.reverse()
        for row in self.PIXEL_MATRIX:
            for pixel in row:
                print(pixel, end='')
            print('\x1b[0m')
        self.PIXEL_MATRIX.reverse()

    def height(self):
        return len(self.PIXEL_MATRIX)

    def width(self):
        return len(self.PIXEL_MATRIX[0])

    def clear(self):
        for row in self.PIXEL_MATRIX:
            for pixel in row:
                pixel = '\x1b[0m   '

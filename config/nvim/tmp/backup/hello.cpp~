#include <iostream>

#include <GL/gl.h>
#include <GL/glut.h>

static double spin = 0.0;

int
main (int argc, char **argv)
{
	// intiialize the window
	glutInit(&argc, argv);
	// set the window display mode
	// 		GL_RGB - use the RGB color model
	// 		GL_DOUBLe - double buffered
	glutInitDisplayMode(GLUT_RGB | GLUT_DOUBLE);

	// set window size
	glutInitWindowSize(640, 480);

	// create the window
	glutCreateWindow("Hello OpenGL");
	glutInitWindowPosition(100, 100);

	// set the clear (background) color and color the window
	glClearColor(0, 0, 0, 0);
	glClear(GL_COLOR_BUFFER_BIT);

	// set the display callback (maybe this shouldn't be a lambda)
	glutDisplayFunc([] (void)
	{
		glColor3f(1.0, 1.0, 1.0);
		glBegin(GL_POLYGON);
			glVertex3f(0.5, 0.5, 0);
			glVertex3f(-0.5, 0.5, 0);
			glVertex3f(-0.5, -0.5, 0);
			glVertex3f(0.5, -0.5, 0);
		glEnd();

		// show the buffer we drew on
		glutSwapBuffers();

		// don't wait to process OpenGL routines
		glFlush();
	});

	// run the 'game loop'
	glutMainLoop();

	return 0;
}

